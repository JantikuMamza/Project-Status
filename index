    <!-- Loading State -->
    <section id="loading-section" class="hidden">
        <div class="card loader">
            <div class="spinner"></div>
            <p>Consulting AI Models...</p>
            <p style="font-size: 0.8rem; color: var(--text-secondary);">Analyzing constraints and generating velocity plan</p>
        </div>
    </section>

    <!-- Dashboard Section -->
    <section id="dashboard-section" class="hidden">
        <div class="card">
            <div style="display: flex; justify-content: space-between; margin-bottom: 2rem;">
                <div>
                    <h2 id="dash-title">Project Name</h2>
                    <p id="dash-dates" style="color: var(--text-secondary); font-size: 0.9rem;">Start - End</p>
                </div>
                <button onclick="resetApp()" style="width: auto; background-color: var(--bg-secondary); border: 1px solid var(--border);">New Project</button>
            </div>

            <h3>Velocity Timeline</h3>
            <p style="margin-bottom: 2rem; color: var(--text-secondary); font-size: 0.9rem;">
                Here is your AI-generated path to completion. Check in as you complete milestones.
            </p>

