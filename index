<main>
    <!-- Onboarding Section -->
    <section id="onboarding-section">
        <div class="card">
            <h2 style="margin-bottom: 1.5rem;">Initialize New Project</h2>
            <form id="project-form">
                <div class="form-group">
                    <label for="project-name">Project Name</label>
                    <input type="text" id="project-name" placeholder="e.g., E-commerce Website Launch" required>
                </div>
                
                <div class="form-group">
                    <label for="project-desc">Project Description & Goals</label>
                    <textarea id="project-desc" rows="4" placeholder="Describe what needs to be built and the primary technologies..." required></textarea>
                </div>

                <div class="form-group" style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div>
                        <label for="start-date">Start Date</label>
                        <input type="date" id="start-date" required>
                    </div>
                    <div>
                        <label for="deadline">Deadline</label>
                        <input type="date" id="deadline" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="check-in-freq">Preferred Check-in Frequency</label>
                    <select id="check-in-freq">
                        <option value="daily">Daily</option>
                        <option value="weekly">Weekly</option>
                        <option value="fortnightly">Fortnightly</option>
                    </select>
                </div>

                <button type="submit" id="generate-btn">Generate AI Timeline</button>
            </form>
        </div>
