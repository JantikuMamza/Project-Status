<button id="theme-toggle" class="theme-toggle" aria-label="Toggle Theme">
    â˜€
</button>

<script>
    // State Management
    const state = {
        project: null,
        milestones: []
    };

    // DOM Elements
    const onboardingSection = document.getElementById('onboarding-section');
    const loadingSection = document.getElementById('loading-section');
    const dashboardSection = document.getElementById('dashboard-section');
    const projectForm = document.getElementById('project-form');
    const timelineContainer = document.getElementById('timeline-container');

    // Theme Logic
    const themeBtn = document.getElementById('theme-toggle');
    const htmlEl = document.documentElement;

    // Load saved theme
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme) {
        htmlEl.setAttribute('data-theme', savedTheme);
        updateThemeIcon(savedTheme);
    }

    themeBtn.addEventListener('click', () => {
        const currentTheme = htmlEl.getAttribute('data-theme');
        const newTheme = currentTheme === 'light' ? 'dark' : 'light';
        
        htmlEl.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
        updateThemeIcon(newTheme);
    });

    function updateThemeIcon(theme) {
        themeBtn.innerHTML = theme === 'light' ? 'ðŸŒ™' : 'â˜€';
    }

    // Utility: Date Formatting
    const formatDate = (dateStr) => {
        return new Date(dateStr).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
    };

    // Default current date for inputs
    document.getElementById('start-date').valueAsDate = new Date();
    
    // Set default deadline to 30 days from now
    const future = new Date();
    future.setDate(future.getDate() + 30);
    document.getElementById('deadline').valueAsDate = future;

    // Handle Form Submission
    projectForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        const formData = {
            name: document.getElementById('project-name').value,
            desc: document.getElementById('project-desc').value,
            start: document.getElementById('start-date').value,
            deadline: document.getElementById('deadline').value,
            frequency: document.getElementById('check-in-freq').value
        };

        transitionToLoading();
        
        try {
            const plan = await fetchAIPlan(formData);
            if(plan) {
                state.project = formData;
                state.milestones = plan.milestones;
                renderDashboard();
            }
        } catch (err) {
            console.error(err);
            alert("Failed to generate plan. Please try again.");
            transitionToOnboarding();
        }
    });

    // --- MODIFIED: AI API Integration (Server-Side Call) ---
    async function fetchAIPlan(data) {
        // No API Key here! It's safely hidden on the server.
        
        try {
            // Calling your local backend
            const response = await fetch('http://localhost:3000/api/generate-plan', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data) // Sending raw form data, not the prompt
            });

            if (!response.ok) {
                const errorData = await response.json();
                throw new Error(errorData.error || 'Server processing failed');
            }

            const result = await response.json();
            
            // The server already sends back clean JSON in result.data
            return result.data;

        } catch (error) {
            console.error('Error fetching AI plan:', error);
            // Fallback for demo purposes if API fails
            return generateFallbackPlan(data);
        }
    }

    // Fallback logic in case API fails (for robustness)
    function generateFallbackPlan(data) {
        return {
            milestones: [
                { title: "Project Setup (Fallback)", date: data.start, description: "Initialize repo and setup environment." },
                { title: "Core Architecture", date: data.deadline, description: "Build main components." },
                { title: "Final Deployment", date: data.deadline, description: "Deploy to production." }
            ]
        };
    }

    // View Transitions
    function transitionToLoading() {
        onboardingSection.classList.add('hidden');
        loadingSection.classList.remove('hidden');
    }

    function transitionToOnboarding() {
        loadingSection.classList.add('hidden');
        dashboardSection.classList.add('hidden');
        onboardingSection.classList.remove('hidden');
    }

    function renderDashboard() {
        loadingSection.classList.add('hidden');
        dashboardSection.classList.remove('hidden');

        document.getElementById('dash-title').textContent = state.project.name;
        document.getElementById('dash-dates').textContent = `${formatDate(state.project.start)} â€” ${formatDate(state.project.deadline)}`;

        timelineContainer.innerHTML = '';

        state.milestones.forEach((ms, index) => {
            const el = document.createElement('div');
            el.className = 'milestone';
            // Animation delay staggering
            el.style.animationDelay = `${index * 0.2}s`;
            
            el.innerHTML = `
                <div class="milestone-dot"></div>
                <div class="milestone-content">
                    <div class="milestone-header">
                        <span class="milestone-title">${ms.title}</span>
                        <span class="milestone-date">${formatDate(ms.date)}</span>
                    </div>
                    <p class="milestone-desc">${ms.description}</p>
                    <button class="check-in-btn" onclick="toggleMilestone(this)">
                        â—‹ Mark as Complete
                    </button>
                </div>
            `;
            timelineContainer.appendChild(el);
        });
    }

    // Check-in Logic
    window.toggleMilestone = function(btn) {
        const milestoneCard = btn.closest('.milestone');
        
        if (milestoneCard.classList.contains('completed')) {
            milestoneCard.classList.remove('completed');
            btn.innerHTML = 'â—‹ Mark as Complete';
        } else {
            milestoneCard.classList.add('completed');
            btn.innerHTML = 'âœ“ Completed';
            
            // Confetti effect or success feedback could go here
        }
    };

    window.resetApp = function() {
        state.project = null;
        state.milestones = [];
        projectForm.reset();
        transitionToOnboarding();
    }

</script>

</body>
</html>
